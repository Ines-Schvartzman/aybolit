{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [ "render" ]
      }
    ],
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "no-restricted-globals": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": [ "*.spec.js" ],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": false,
        "sinon": false
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  }
}
